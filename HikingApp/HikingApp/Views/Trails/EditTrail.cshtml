@model HikingApp.Models.TrailsViewModel

@{
    var isEditMode = Model.TrailId != null;
    ViewBag.Title = isEditMode ? "Edit " + Model.NameOfTrail : "Add Trail";
}

<h2>EditTrail</h2>

<form method="post">


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        
        <div class="row formy">

            <div class="col-md-12 formy">

                @Html.HiddenFor(m => m.TrailId)


                <div class="form-group">
                    @Html.LabelFor(m => m.NameOfTrail, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.NameOfTrail, new { @class = "form-control" })
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Date, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Date, "{0:d}", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Location, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.LengthOfTrail, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.LengthOfTrail, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Difficulty, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Difficulty, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.WeatherConditions, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.WeatherConditions, new { @class = "form-control" })
                </div>



                <div class="col-md-12 formy">

                    <div class="form-group">
                        @Html.LabelFor(m => m.Notes, new { @class = "control-label" })
                        @Html.TextAreaFor(m => m.Notes, 10, 15, new { @class = "form-control" })
                    </div>



                </div>

                <div class="col-md-12 formy">
                    <div class="pad-top">

                        <button type="submit" class="btn btn-primary">Save</button>
                        <span class="glyphicon glyphicon-save"></span>

                        <a href="@Url.Action("TrailHistory")" class="btn btn-warning btn-lg">
                            <span class="glyphicon glyphicon-remove"></span> Cancel
                        </a>
                    </div>
                </div>

            </div>

        </div>

    }

</form>


