@model HikingApp.Models.TrailsViewModel


@{
    ViewBag.Title = "The Hiking Helper";
    ViewBag.Message = "Enter Trail: ";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>



    @using (Html.BeginForm("AddTrail", "Trails"))
    {
        <div class="row">

            <div class= "form-group">

                <div class= "form-group row">
                    @Html.LabelFor(m => m.NameOfTrail, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.NameOfTrail, new { @class = "form-control" })
                    </div>
                </div>
                

                <div class="form-group row">
                    @Html.LabelFor(m => m.Date, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Date, "{0:d}", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Location, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.LengthOfTrail, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.LengthOfTrail, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Difficulty, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Difficulty, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.WeatherConditions, new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.WeatherConditions, new { @class = "form-control" })
                    </div>
                </div>


                    <div class="form-group">

                        <div class="form-group">
                            @Html.LabelFor(m => m.Notes, new { @class = "control-label" })
                            @Html.TextAreaFor(m => m.Notes, 10, 15, new { @class = "form-control" })
                        </div>



                    </div>

                    <div class="col-md-12">
                        <div class="pad-top">

                            <button type="submit" class="btn btn-primary">Add</button>

                            @Html.ActionLink("Cancel", "AddTrail", null, new { @class = "btn btn-default" })

                        </div>
                    </div>

                </div>

        </div>

    }



