@model HikingApp.Models.TrailsViewModel


@{
    ViewBag.Title = "The Hiking Helper";
    ViewBag.Message = "Enter Trail: ";
}
<h2>@ViewBag.Title</h2>
<h3 class="text-center">@ViewBag.Message</h3>



    @using (Html.BeginForm("AddTrail", "Trails"))
    {
        

            <div class= "row form-group">

                <div class= "form-group row">
                    @Html.LabelFor(m => m.NameOfTrail, new { @class = "col-sm-2 col-form-label text-center" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.NameOfTrail, new { @class = "form-control text-center" })
                    </div>
                </div>
                

                <div class="form-group row">
                    @Html.LabelFor(m => m.Date, new { @class = "col-sm-2 col-form-label text-center" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Date, "{0:d}", new { @class = "form-control text-center" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Location, new { @class = "col-sm-2 col-form-label text-center" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Location, new { @class = "form-control text-center" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.LengthOfTrail, new { @class = "col-sm-2 col-form-label text-center" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.LengthOfTrail, new { @class = "form-control text-center" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.Difficulty, new { @class = "col-sm-2 col-form-label text-center" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Difficulty, new { @class = "form-control text-center" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(m => m.WeatherConditions, new { @class = "col-sm-2 col-form-label text-center" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.WeatherConditions, new { @class = "form-control text-center" })
                    </div>
                </div>


                    <div class="form-group">

                        <div class="form-group text-center">
                            @Html.LabelFor(m => m.Notes, new { @class = "col-sm-2 control-label text-center" })
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.Notes, 10, 15, new { @class = "form-control text-center " })
                            </div>
                       </div>



                        </div>

                    <div class="col-md-12 text-center">
                        <div class="pad-top">

                            <button type="submit" class="btn btn-primary">Add</button>

                            @Html.ActionLink("Cancel", "AddTrail", null, new { @class = "btn btn-default" })

                        </div>
                    </div>

                </div>

        

    }



